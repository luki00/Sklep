@model Sklep.ViewModels.ArtykulyListViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<input type="button" class="btn btn-secondary my-2 my-sm-0" value="Wróć" onclick="location.href='@Url.Action("Index")'" />


<h1 align="center">@Html.DisplayFor(model => model.Details.Name)</h1>

<div>

    <dl class="dl-horizontal">

        <h2 align="center">
            @if (Model.Details.Photo != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.Details.Photo)" />
            }
            else
            {
                <img src="/Pliki/image_404.png" alt="" />
            }
        </h2>

        <h3 align="center">

            @Html.DisplayFor(model => model.Details.Describtion)

        </h3>

        <dt>
            Dostępna ilosć:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Details.Quantity) @Html.DisplayFor(model => model.Details.Unit)
        </dd>




    </dl>
</div>
<div style="width: 100%;
  display: flex;
  justify-content: center;">
    @if (Model.Details.Quantity >= 0)
    {




            <h3>
                @Html.ActionLink(
            linkText: "Zamów",
            actionName: "Create",
            controllerName: "Transakcje",
            routeValues: new {
            id = Model.Details.Id
            },
            htmlAttributes: new { @class = "btn btn-secondary" }
            )
                
            </h3>



    }
    else
    {
        <h3>
            Brak towaru na magazynie
        </h3>
    }
</div>