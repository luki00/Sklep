@model IEnumerable<Sklep.Models.Artykul>

@{
    ViewBag.Title = "Artykuły";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Artykuły</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Zdjecie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>


        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Zdjecie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>

        <td>
                        @Html.ActionLink("Wyświetl", "Details", new { id = item.Id_towaru, @class= "btn btn-secondary" })

        </td>
    </tr>
}

</table>
<button type="button" align="right" class="btn btn-default">
    @Html.ActionLink("Stwórz nowy produkt", "Create", new { @class = "btn btn-secondary" })
</button>