@model IEnumerable<Sklep.Models.Artykul>

@{
    ViewBag.Title = "Artykuły";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Artykuły</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Zdjecie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>


        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (item.Zdjecie != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(item.Zdjecie)"  height="110" width="150" />
            }
            else
            {
                <img src="/Pliki/image_404.png" alt=""  height="110" width="150" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>

        <td>
            <input type="button" class="btn btn-secondary my-2 my-sm-0" value="Wyświetl" onclick="location.href='@Url.Action("Details", new { id = item.Id_towaru })'" />

        </td>
    </tr>
}

</table>

