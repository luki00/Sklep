@model Sklep.ViewModels.ArtykulyListViewModel

@{
    ViewBag.Title = "Artykuły";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Artykuły</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.List.FirstOrDefault().Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.List.FirstOrDefault().Name)
        </th>


        <th></th>
    </tr>

@foreach (var item in Model.List) {
    <tr>
        <td>
            @if (item.Photo != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(item.Photo)"  height="110" width="150" />
            }
            else
            {
                <img src="/Pliki/image_404.png" alt=""  height="110" width="150" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            <input type="button" class="btn btn-secondary my-2 my-sm-0" value="Wyświetl" onclick="location.href='@Url.Action("Details", new { id = item.Id })'" />
            <input type="button" class="btn btn-secondary my-2 my-sm-0" value="Usuń" onclick="location.href='@Url.Action("Delete", new { id = item.Id })'" />
            <input type="button" class="btn btn-secondary my-2 my-sm-0" value="Edytuj" onclick="location.href='@Url.Action("Edit", new { id = item.Id })'" />
        </td>
    </tr>
}

</table>

