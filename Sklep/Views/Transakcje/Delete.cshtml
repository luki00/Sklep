@model Sklep.ViewModels.TransakcjeListViewModel
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.ActionLink("Wróć do koszyka", "Index")
<h2>Anuluj</h2>
@if (ViewBag.Potwierdzono)
{

    <h3>Nie można anulować transakcji, ponieważ została ona potwierdzona.</h3>

    <div class="form-actions no-color">
        @Html.ActionLink("Wróć do koszyka", "Index")
    </div>
}
else
{
    <h3>Czy napewno chcesz anulować transakcję?</h3>
    <div>
        <h4>Transakcja</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Details.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Details.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Details.Quantity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Details.Quantity)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Details.Created)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Details.Created)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Anuluj" class="btn btn-secondary" />
            </div>

        }


    </div>

}
