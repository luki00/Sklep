@model Sklep.ViewModels.TransakcjeListViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Transakcja</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Details.Id)



        <div class="form-group">
            @Html.DisplayNameFor(model => model.Details.Name)
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Details.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.DisplayNameFor(model => model.Details.Quantity)
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Details.Quantity) @Html.DisplayFor(model => model.Details.Unit)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Potwierdź zakup" class="btn btn-secondary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wróć", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
