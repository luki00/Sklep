@model Sklep.ViewModels.TransakcjeListViewModel

@{
    ViewBag.Title = "Koszyk";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Koszyk</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.List.FirstOrDefault().Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.List.FirstOrDefault().Accepted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.List.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.List.FirstOrDefault().Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.List.FirstOrDefault().Created)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.List)
    {
        <tr>
            <td>
                @if (item.Photo != null)
                {
                    <img src="data:image;base64,@Convert.ToBase64String(item.Photo)" height="110" width="150" />
                }
                else
                {
                    <img src="/Pliki/image_404.png" alt="" height="110" width="150" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accepted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity) @Html.DisplayFor(modelItem => item.Unit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>

            <td>
                @Html.ActionLink("Potwierdź", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary" })
                @Html.ActionLink("Wyświetl", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" })
                @Html.ActionLink("Anuluj", "Delete", new { id = item.Id }, new { @class = "btn btn-secondary" })
            </td>
        </tr>
    }

</table>
